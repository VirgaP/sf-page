{% extends 'base.html.twig' %}

{% block title %}Apie mus{% endblock %}

{% block body %}
    <style>
        #about-us {
            background-image: url("../images/dogs-banner.jpg");
            background-size: 100%;
            background-repeat: no-repeat;
            height: 320px;
        }
        .about-us {
            margin-top: 50px;
            margin-bottom: 30px;
            max-width: 900px;
            font-family: 'Quicksand', sans-serif;
            line-height: 1.6;
        }
    </style>
    <section id="about-us"></section>
    <div class="container-fluid about-us text-center">
    <h1>Apie mus</h1>

    {% for data in about %}
        <p>{{ data.text|raw }}</p>
    {% endfor %}
        <a href="{{ path('message_new') }}"><i class="far fa-envelope fa-2x"></i> Parašykite mums</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('about_edit', {'id': '1'}) }}">Koreguoti puslapį</a>
    {% endif %}

    </div>
    {{ include('home/_footer.html.twig') }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="/js/home.js"></script>

{% endblock %}
