{% extends 'base.html.twig' %}

{% block title %}Gautos žinutės{% endblock %}

{% block body %}
    <style>
        .container-fluid {
            max-width: 90%;
            padding: 70px;
        }
    </style>
    <div class="container-fluid">
    <h2>Gautos žinutės</h2>

        {% for message in messages %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-user"></i> {{ message.name }} {{ message.email }}</h5>
                <h6 class="card-subtitle mb-2"><i class="fas fa-phone"></i> {{ message.phoneNumber }}</h6>
                <h6 class="card-subtitle mb-2 text-muted">{{ message.createdAt|date('Y-m-d H:i:s') }}</h6>
                <p class="card-text">{{ message.message }}</p>
                <a href="{{ path('messages_archive', {'id': message.id}) }}" class="card-link">Perkelti į skaitytas</a>
            </div>
        </div>
        {% else %}
            <h6>Naujų žinučių nėra</h6>
        {% endfor %}
        <a href="{{ path('messages_seen') }}" class="btn btn-primary">Žiūrėti skaitytas žinutes</a>
    </div>
{% endblock %}