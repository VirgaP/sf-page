{% extends 'base.html.twig' %}

{% block title %}Žinutės{% endblock %}

{% block body %}
    <style>
        .container-fluid {
            max-width: 90%;
            padding: 70px;
        }
    </style>
    <div class="container-fluid">
        <h4>Žinutės</h4>
        {% for message in messages %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user"></i> {{ message.name }} {{ message.email }}</h5>
                    <h6 class="card-subtitle mb-2"><i class="fas fa-phone"></i> {{ message.phoneNumber }}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">{{ message.createdAt|date('Y-m-d H:i:s') }}</h6>
                    <p class="card-text">{{ message.message }}</p>
                    {{ include('admin/_delete_messages_form.html.twig') }}
                </div>
            </div>
        {% else %}
            <h6>Naujų žinučių nėra</h6>
        {% endfor %}
        <a href="{{ path('messages_index') }}" class="btn btn-primary">Grįžti į sąrašą</a>
    </div>
{% endblock %}